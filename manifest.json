{
  "manifest_version": 2,
  "name": "Delivery Management Tool",
  "version": "0.1",
  "browser_action": {
    "default_icon": "logo/dm-avatar.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery-3.2.0.min.js",
      "js/popup.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}